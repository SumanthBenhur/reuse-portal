<body>
  <%- include('partials/header') %>
  <div class="container mt-5">
    <h1 id="loginheading">ADD PRODUCT</h1>
  
    <div class="row justify-content-center">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /login route -->
            <form name="form1" action="/add"  method="POST" onload="funblur();" enctype="multipart/form-data">
              <div class="form-group">
                <label for="nop">Product Name</label>
                <input type="text" class="form-control" name="nop" id="nop" onblur="validate_nop();">
              </div>
              <select class=" form-group selectpicker dropdown show" data-style="btn-info" name="selectpicker" id="category">
                <optgroup class=" btn btn-secondary dropdown-toggle" label="Select category">
                  
                  <option class="dropdown-item" name="table1" value="Furniture">Furniture</option>
                  <option class="dropdown-item" name="table2" value="Stationary">Stationary</option>
                  <option class="dropdown-item" name="table3" value="Books">Books and Resources</option>
                </optgroup>
            </select>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Upload</span>
                </div>
                <div class="custom-file">
                  <input type="file" class="custom-file-input" id="img" name="img" type="file" accept="image/*">
                  <label class="custom-file-label" for="img">Choose file</label>
                </div>
              </div>
              <div class="form-group">
                <label for="dop">Product Description</label>
                <textarea type="text" class="form-control" id="dop" name="dop" rows="6"></textarea>
              </div>
              <button type="submit" class="btn btn-dark" name="submit" id="submit" onsubmit="fun();">ADD</button>
            </form>
  
          </div>
        </div>
      </div>
  
    </div>
  </div>
<script src="js/addval.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
